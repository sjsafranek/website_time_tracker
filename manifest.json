{
	"name": "Time Tracker Extension",
	"version": "0.1",
	"description": "Tracks time spent at websites.",
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"permissions": [
		"background",
		"tabs",
		"http://*/",
		"https://*/"
	],
    "browser_action": {
        "default_icon": "camera.png",
        "default_title": "Time Tracker Details"
    },
	"manifest_version": 2
}
